{
  "name": "piobuddev/behat-webapi-extension",
  "description": "Behat extension for APIs testing",
  "keywords": [
    "testing"
  ],
  "authors": [
    {
      "name": "Piotr Budny",
      "role": "Developer"
    }
  ],
  "minimum-stability": "dev",
  "repositories": [
    {
      "type": "path",
      "url": "/home/vagrant/sakila/repository-tester"
    }
  ],
  "require": {
    "behat/behat": "^3.4",
    "guzzlehttp/guzzle": "^6.3",
    "piobuddev/repository-tester": "*",
    "symfony/dotenv": "^4.0"
  },
  "autoload": {
    "psr-0": {
      "WebApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WebApi\\Test\\": ["tests/Integration/"]
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^0.8.5",
    "squizlabs/php_codesniffer": "*"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse -l 7 src tests",
    "phpcs": "vendor/bin/phpcs --standard=PSR2 --extensions=php --colors --severity=1 src",
    "phpcbf": "vendor/bin/phpcbf --standard=PSR2 --extensions=php --colors --severity=1 src"
  }
}
